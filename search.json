---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title": {{ post.title | jsonify }},
      "url": {{ post.url | relative_url | jsonify }},
      "date": {{ post.date | date_to_string | jsonify }},
      
      {% comment %} Updated to include both tags and categories {% endcomment %}
      "tags": {{ post.tags | concat: post.categories | join: ', ' | downcase | jsonify }},
      
      "subheadline": {{ post.subheadline | jsonify }},
      "image": {{ post.image | relative_url | jsonify }},
      "image_description": {{ post.image_description | jsonify }}
      {% comment %} REMOVED "content" to fix performance lag {% endcomment %}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]